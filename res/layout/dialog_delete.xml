<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_delete_friend"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="100dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="85dp" >

        <TextView
            android:id="@+id/txt_friend_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBER: " />

        <!-- The text is hard-coded here but will be set programatically in code in final assembly -->

        <TextView
            android:id="@+id/txt_friend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="65dp" >

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/dialog_ok_def" />

        <Button
            android:id="@+id/btn_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_close_def" />
    </LinearLayout>

</LinearLayout>